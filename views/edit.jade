extends layout
block page
  - var menu = 'edit'
block content
  div=err
  if(!quiz)
    p No experiment selected!
  else
    div.col-md-8 
      h2 The experiment's id in mongoDB: #{quiz.id}
      form(action="/quiz/edit", method="POST", role="form")
        div.form-group
          label(for="title") Title
          input#title.form-control(name="title", type="text", value="#{quiz.title}")
        div.form-group
          label(for="slug") Slug
          input#slug.form-control(name="slug", type="text", value="#{quiz.slug}")
          span.help-block This string will be used in the URL.
        div.form-group
          label(for="style") Style
          input#style.form-control(name="style", type="textbox", value="#{quiz.style}")
          span.help-block Ids you can use: #task, #text, #choices, #image
        div.form-group
          label(for="img") Images
          input.form-control(name="img", type="textbox", value="#{quiz.images}")
          span.help-block This is to help us find the right images
        div.form-group
          label(for="timer") Timer
          input.form-control(name="timer", type="number", value="#{quiz.timeout}")
          span.help-block The timer for each task in milliseconds
        div.form-group
          label(for="showtimer") Show timer
          input.form-control(name="showtimer", type="text", value="#{quiz.show_timer}")
        div.form-group
          label(for="randomize") Randomize
          input.form-control(name="randomize", type="text", value="#{quiz.randomize}")
        p
          button.btn.btn-primary(type="submit") Submit and go to tasks/questions
