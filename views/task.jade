extends layout
block page
  - var menu = 'task'
block content
  if(!task)
    div= err
  else
    div.row
      p.col-md-7.task Task: #{task.num}
        img(src="/img/#{task.img}")
      form.col-sm-3(action="/quiz/edit/task/#{task.num}", method="POST", role="form")
        div.form-group
          label(for="text") Text
          textarea#text.form-control.textarea(name="text")=task.text
        each response, index in task.responses
          div.form-group
            input.form-control(name="#{index}", type="text", value="#{response}")
        div.form-group
          label(for="solution") Right Answer
          input#text.form-control(name="solution", type="text", value="#{task.solution}")
        p
          button.btn.btn-primary(type="submit") Next
