extends layout
block page
  - var menu = "create"
block content
  div= err
  div.col-md-8.container.quizparams
    form(action="/quiz/create", method="POST", role="form")
      div.form-group
        label(for="pathtodata") Path to exp.json (expecting json)
        input.form-control(type="text", name="pathtodata", value="exp/experiment_1/experiment.json")
        span.help-block This is to help us find the right data to render an experiment
      div.form-group
        label(for="pathtocss") Path to style file if there is one
        input.form-control(name="pathtocss", type="text", value="exp/experiment_1/style.css")
        span.help-block This is to help us find the right style to apply
      div.form-group
        label(for="pathtoimg") Images directory
        input.form-control(name="pathtoimg", type="text", value="exp/experiment_1/img")
        span.help-block This is to help us find the right images
      p
        button.btn.btn-primary(type="submit") Submit
